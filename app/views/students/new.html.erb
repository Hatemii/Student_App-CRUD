<h2>New Student</h2>

<% if flash[:errors] %>
  <% flash[:errors].each do |er| %>
    <p style="color: red"><%= er%></p>
  <% end %>
<% end %>




<%= form_for @student do |x| %>

  <b><%= x.label :name %></b><br>
  <%= x.text_field :name,placeholder:"enter name .." %><br>
<b><%= x.label :age %></b><br>
  <%= x.text_field :age, placeholder: "enter age .." %><br>

  <br>

  <%= x.submit %>

<% end %>
